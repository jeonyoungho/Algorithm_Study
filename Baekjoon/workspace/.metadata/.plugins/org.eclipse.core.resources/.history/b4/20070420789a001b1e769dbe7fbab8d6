import java.util.*;

public class Main {
	// 출처: https://fbtmdwhd33.tistory.com/71
	static int dp[];
	
	public static void main(String[] args)   {
		Scanner sc = new Scanner(System.in);
		
		int n = sc.nextInt();
		dp = new int[n+1];
		
		dp[1] = 1;
		dp[2] = 3;
		
		// 3 = (dp[1] * 2) + dp[2]
		
		for(int i=3;i<=n;i++) {
			
			dp[i] = (dp[i-2] * 2) + dp[i-1];
			dp[i] %= 10007;
			 
		}
		
		System.out.println(dp[n]);
		sc.close();
	}
	
}
